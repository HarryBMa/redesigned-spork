{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Harry's Lilla Lager",
  "version": "0.1.0",
  "identifier": "com.harrys-lilla-lager.app",  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Harry's Lilla Lager - Adminpanel",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "visible": false,
        "decorations": true,
        "resizable": true,
        "center": true,
        "transparent": false
      },
      {
        "label": "scan-popup",
        "title": "Snabbscanning",
        "width": 400,
        "height": 300,
        "decorations": true,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": false,
        "transparent": false,
        "center": true,
        "url": "/scan-popup"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
